@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!--Admin Category Index i-->
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th> <!--ID ALANIYDI, görsellik için # yaptık-->
        <th>Kategori Adı</th>
        <!--<th>Durum</th>-->
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>

    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <th>@item.CategoryID</th> <!--yine td'ye göre kalın olsun diye th yaptık.-->
        <td>@item.CategoryName</td>
        <!--<td>item.CategoryStatus</td>-->
        <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></td>
        <td><a href="/AdminCategory/EditCategory/@item.CategoryID" class="btn btn-warning">Güncelle</a></td>
        <td><a href="#" class="btn btn-primary">Başlıklar</a></td>
    </tr>
    }
</table>
<br />
<a href="/AdminCategory/AddCategory" class="btn btn-info">Kategori Ekleme</a>