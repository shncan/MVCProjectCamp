@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "Index"; <!--Heading'in INDEXI-->
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string color = "";} <!--kategorideki değerlere göre renk değiştirteceğiz-->

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">            
            <!-- Content Header (Page header) -->                   
    <section class="content-header">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                </div>
            </div>
        </div>
    </section>       
    
    <section class="content">
                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Başlık İşlemleri</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped projects">
                            <thead>
                                <tr>
                                    <th style="width: 1%">
                                        #
                                    </th>
                                    <th style="width: 20%">
                                        Başlık Adı
                                    </th>
                                    <th style="width: 15%">
                                        Oluşturan Yazar
                                    </th>
                                    <th style="width: 10%">
                                        Durum
                                    </th>
                                    @*<th>
            Project Progress
        </th>*@
                                    <th style="width: 8%" class="text-center">
                                        Kategori
                                    </th>
                                    <th style="width: 20%">
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    if (item.CategoryID == 1) 
                                    {
                                        color = "badge badge-success";
                                    }
                                    if (item.CategoryID == 2)
                                    {
                                        color = "badge badge-warning";
                                    }
                                    if (item.CategoryID == 3)
                                    {
                                        color = "badge badge-info";
                                    }

                                    if (item.CategoryID == 4)
                                    {
                                        color = "badge badge-warning";
                                    }
                                    if (item.CategoryID == 5)
                                    {
                                        color = "badge badge-";
                                    }
                                    if (item.CategoryID == 6)
                                    {
                                        color = "badge badge-warning";
                                    }
                                    if (item.CategoryID == 7)
                                    {
                                        color = "badge badge-info";
                                    }

                                    if (item.CategoryID == 8)
                                    {
                                        color = "badge badge-info";
                                    }
                                    if (item.CategoryID == 9)
                                    {
                                        color = "badge badge-warning";
                                    }
                                    if (item.CategoryID == 10)
                                    {
                                        color = "badge badge-info";
                                    }
                                    if (item.CategoryID == 11)
                                    {
                                        color = "badge badge-info";
                                    }


                                    <tr>
                                        <td>
                                            @item.HeadingID
                                        </td>
                                        <td>
                                            <a>
                                                @item.HeadingName
                                            </a>
                                            <br />
                                            <small>
                                                @(((DateTime)item.HeadingDate).ToString("dd--MMM-yyyy"))
                                                <!--tarih formatı düz item.headingDate'i biraz daha özelleştirdik.-->
                                            </small>
                                        </td>
                                        <td>
                                            <ul class="list-inline">
                                                <li class="list-inline-item">
                                                    <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                                </li>
                                            </ul>
                                        </td>
                                        <td>
                                            @item.HeadingStatus
                                        </td>
                                        <td class="project-state">
                                            <span class="@color">@item.CategoryID</span> <!--burada colordan gelen değişkeni kullan dedik.-->
                                        </td>
                                        <td class="project-actions text-right">
                                            <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingID">
                                                <i class="fas fa-folder">
                                                </i>
                                                İçerikler
                                            </a>
                                            <a class="btn btn-info btn-sm" href="/Heading/EditHeading/@item.HeadingID">   <!--burada HeadingController'da tanımladığımız edit sayfasına gidiyoruz.-->
                                                <i class="fas fa-pencil-alt">
                                                </i>
                                                Düzenle
                                            </a>
                                            <a class="btn btn-danger btn-sm" href=" /Heading/DeleteHeading/@item.HeadingID">
                                                <i class="fas fa-trash">
                                                </i>
                                                Sil
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </section>
            <!-- /.content -->
        <!-- /.content-wrapper -->       
</body>
</html>
<a href="Heading/AddHeading/" class="btn btn-primary">Yeni Başlık Girişi</a>



